#include <stdio.h>

int reverse(int number) {
    int reversed = 0;
    while(number != 0) {
        int digit = number % 10;
        reversed = (reversed * 10) + digit;
        number = (number - digit) / 10;
    }
    return reversed;
}

int main(void) {
    int num;
    printf("Insira um nÃºmero: ");
    scanf("%d", &num);
    printf("O valor do numero agora vale: %d", reverse(num));
    return 0;
}
