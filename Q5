#include <stdio.h>

int main(void) {
    char sexo;
    float altura, peso;
    printf("Insira o valor da sua altura(em metros): ");
    scanf("%f", &altura);
    getchar();
    printf("Insira o sexo: ");
    scanf("%c", &sexo);
    if (sexo == 'M' || sexo == 'm') {
        peso = 72.7 * altura - 58;
    }
    else if (sexo == 'F' || sexo == 'f') {
        peso = 62.1 * altura - 44.7;
    }
    else {
        printf("Insira um sexo v√°lido\n");
    }
    printf("O peso ideal estimado vale: %f\n", peso);

    return 0;
}
