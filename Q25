#include <stdio.h>
#include <math.h>

int main(void) {
    float x1, x2, y1, y2;
    printf("Insira as coordenadas do primeiro ponto: ");
    scanf("%f %f", &x1, &y1);
    printf("Insira as coordenadas do segundo ponto: ");
    scanf("%f %f", &x2, &y2);

    float distancia = sqrt(pow(x1-x2, 2) + pow(y1-y2, 2));
    printf("A dist√¢ncia entre os pontos vale: %.2f\n", distancia);

    return 0;
}
